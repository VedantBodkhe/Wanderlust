<% layout('layout/boilerplate') -%>

<div class="row mt-3">
  <div class="col-8 offset-2">
    <h1>Edit your listing</h1>
    <form
    method="POST"
    action="/listings/<%= userListing._id %>?_method=PUT"
    novalidate class="needs-validation"
    enctype="multipart/form-data">
      <!-- Title -->
      <div class="mb-3">
        <label for="title" class="form-label">Title</label>
        <input
          name="listing[title]"
          value="<%= userListing.title %>"
          type="text"
          class="form-control"
          id="title"
          required
        >
        <div class="valid-feedback">Looks good!</div>
        <div class="invalid-feedback">Please enter a valid title.</div>
      </div>

      <!-- Description -->
      <div class="mb-3">
        <label for="description" class="form-label">Description</label>
        <textarea
          name="listing[description]"
          class="form-control"
          id="description"
          rows="4"
          required
        ><%= userListing.description %></textarea>
        <div class="valid-feedback">Description looks good!</div>
        <div class="invalid-feedback">Please enter a valid description.</div>
      </div>

      <!-- Image -->
      <div class="mb-3">
  <img
    src="<%= originalImageUrl %>"
    alt="Current listing image"
    style="width: 300px;"
   >
</div>
      <div class="mb-3">
        <label for="image" class="form-label">Upload New Image</label>
        <input
          name="listing[image]"
          type="file"
          class="form-control"
          id="image"
        >
      </div>

      <!-- Price and Location -->
      <div class="row">
        <div class="mb-3 col-md-4">
          <label for="price" class="form-label">Price</label>
          <input
            name="listing[price]"
            value="<%= userListing.price %>"
            type="number"
            class="form-control"
            id="price"
            required
          >
          <div class="valid-feedback">Price looks good!</div>
          <div class="invalid-feedback">Please enter a valid price.</div>
        </div>

        <div class="mb-3 col-md-8">
          <label for="location" class="form-label">Location</label>
          <input
            name="listing[location]"
            value="<%= userListing.location %>"
            type="text"
            class="form-control"
            id="location"
            required
          >
          <div class="valid-feedback">Location is valid!</div>
          <div class="invalid-feedback">Please enter a valid location.</div>
        </div>
      </div>

      <!-- Country -->
      <div class="mb-3">
        <label for="country" class="form-label">Country</label>
        <input
          name="listing[country]"
          value="<%= userListing.country %>"
          type="text"
          class="form-control"
          id="country"
          required
        >
        <div class="valid-feedback">Country looks good!</div>
        <div class="invalid-feedback">Please enter a valid country.</div>
      </div>

      <!-- Submit Button -->
      <button class="btn btn-dark edit-btn mt-3" type="submit">Edit</button>
    </form>
  </div>
</div>
